{
  "defaultSeverity": "error",
  "exclude": [
    "node_modules"
  ],
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "curly": [
      true,
      "ignore-same-line"
    ],
    "max-line-length": [
      false
    ],
    "no-unused-expression": true,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  },
  "rules": {
    "arrow-parens": false,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "interface-name": false,
    "max-line-length": [
      false
    ],
    "member-access": [
      false
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "private-static-field",
          "public-instance-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-static-method",
          "protected-static-method",
          "private-static-method",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": [
      false
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  },
  "rulesDirectory": []
}